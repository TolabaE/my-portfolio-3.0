const estudios = [
    {
        id:1,
        facultad:"Universidad de Buenos Aires",
        carrera:"Carrera Analista en Sistemas",
        inicio:"Marzo 2023 - presente"
    },
    {
        id:2,
        facultad:"Instituto superior en Lenguas Vivas",
        carrera:"Idioma Ingles",
        inicio:"Marzo 2020 - Presente"
    },
    {
