---
import CardProject from "../components/CardProject.astro";
import ProjectJSON from "../JSON/projects.json";

const myProjects = ProjectJSON[0];
const companyProjects = ProjectJSON[1];

---
<h2 class="text-center pb-8 text-2xl md:text-4xl font-semibold text-white p-2 md:p-8">Mis <span class="text-cyan-400">Proyectos</span></h2>
<div class="flex flex-col gap-6 items-center md:flex-row  flex-wrap md:justify-evenly py-4">
    {
        myProjects.map(item =>(
            <CardProject
                imagen={item.portada}
                title={item.nombre}
                description={item.detalle}
                github={item.repositorio}
                deploy={item.demo}
                tecnology={item.tecnologias} 
            />
        ))
    }
</div>
<h2 class="text-center pb-8 text-2xl md:text-4xl font-semibold text-white p-2 md:p-8">Proyectos <span class="text-cyan-400">Empresariales</span></h2>
<div class="flex flex-col gap-6 items-center md:flex-row  flex-wrap md:justify-evenly py-4">
    {
        companyProjects.map(item =>(
            <CardProject
                imagen={item.portada}
                title={item.nombre}
                description={item.detalle}
                github={item.repositorio}
                deploy={item.demo}
                tecnology={item.tecnologias} 
            />
        ))
    }
</div>