---
import CardProject from "../components/CardProject.astro";
import ProjectJSON from "../JSON/projects.json";



---
<div class="flex flex-col gap-6 items-center md:flex-row  flex-wrap md:justify-start py-4">
    {
        ProjectJSON.map(item =>(
            <CardProject
                imagen={item.portada}
                title={item.nombre}
                description={item.detalle}
                github={item.repositorio}
                deploy={item.demo}
                tecnology={item.tecnologias} 
            />
        ))
    }
</div>
