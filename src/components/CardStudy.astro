---
interface Props {
    instituto:string,
    titulo:string,
    fecha:string
}

const {instituto,titulo,fecha} = Astro.props;
---

<div class="border-2 border-cyan-400 m-2 p-2 md:p-4 md:my-6 rounded-xl">
    <h3 class="text-cyan-400 text-base md:text-2xl">{instituto}</h3>
    <p class="text-base md:text-xl">{titulo}</p>
    <p class="text-sm md:text-base"><span class="text-cyan-400">Periodo | </span> {fecha}</p>
</div>