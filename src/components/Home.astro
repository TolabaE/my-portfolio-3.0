<script>
    document.addEventListener("DOMContentLoaded", () => {
    const etiqueta = document.getElementById('subtitle');
    const texts = "Desarrollador Web Full Stack       ";
    let long = texts.length;
    let count = 0; 

    function writeTextDom() {
        if (etiqueta) {  // Verificación de null
            if (count < texts.length) {
                etiqueta.textContent += texts.charAt(count); // Corta la letra de acuerdo a la posición del contador.
                count++;
            } else {
                deleteTextDom(); // Si el contador llega al límite de la longitud, se ejecuta esta función
            }
        }
    }

    function deleteTextDom() {
        if (etiqueta) {  // Verificación de null
            if (count === texts.length) {
                etiqueta.textContent = texts.substring(0, long);
                long--;
                if (long === -2) {
                    etiqueta.textContent = '';
                    long = texts.length;
                    count = 0;
                }
            }
        }
    }
    setInterval(writeTextDom, 100);//se usa para determinar el tiempo de ejecucion de la funcion y su duracion
});

</script>
