---
interface Props {
    periodo:string,
    empresa:string,
    empleo:string,
    logoEmpresa:string
}

const {periodo,empresa,empleo,logoEmpresa} = Astro.props;

---
<div class="flex justify-between border-2 rounded-md md:rounded-xl lg:border-2 m-4 p-4 md:m-8 animation items-center">
    <div>
        <h3 class="text-lg lg:text-2xl text-cyan-400 font-semibold">Empresa: <span class="text-white">{empresa}</span></h3>
        <p class="text-cyan-400 text-sm lg:text-lg font-bold">Sector: <span class="text-white">{empleo}</span></p>
        <p class="text-cyan-400 font-semibold text-sm lg:text-base">Periodo: <span class="text-white">{periodo}</span> </p>
    </div>
    <img src={logoEmpresa} alt="imagen de la empresa" class="w-20 lg:w-28 rounded-md shadow shadow-cyan-400">
</div>
<style>
    .animation{
        animation: pintborder 1.2s linear infinite;
        border-color: transparent;
    }

    @keyframes pintborder{
            25%
            {
                border-top-color: #00E8F8;
            }
            50%
            {
                border-right-color: #00E8F8;
            }
            75%
            {
                border-bottom-color: #00E8F8;
            }
            100%
            {
                border-left-color: #00E8F8;
            }
        }
</style>