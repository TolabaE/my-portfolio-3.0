---
import CardImage from './CardImage.astro';

interface Props {
    imagen:string,
    title:string,
    description:string,
    tecnology:Object,
    github:string,
    deploy:string
}

const {title,description,tecnology,github,deploy,imagen} = Astro.props;

---

<div class=" text-white card__project">
    <img src={imagen} class="card__project-image" alt="descripcion de la imagen">
    <div class="card__project-info p-2 md:p-3 gap-y-1 md:gap-y-2 lg:gap-y-3">
        <h2 class="text-center text-lg md:text-xl text-cyan-400 font-semibold">{title}</h2>
        <p class="text-left text-sm md:text-base"> {description} </p>
        <div>
            <b><span class="text-cyan-400">Tecnologias</span> utilizadas:</b>
            <div class="flex gap-1">
                {
                    tecnology.map(item =>(
                        <CardImage
                            image={item.src}
                            detail={item.detail}
                        />
                    ))
                }
            </div>
        </div>
        <div class="flex justify-around">
            <button class="bg-black text-sm md:text-base font-semibold px-3 py-1 rounded-lg"><a href={github}>Github</a></button>
            <button class="bg-cyan-400 text-sm md:text-base font-semibold px-3 py-1 rounded-lg"><a href={deploy}>Deploy</a></button>
        </div>
    </div>
</div>


<style>
    .card__project{
        position: relative;
        width: 340px;
        height: 380px;
        border-radius: 8px;
    }
    .card__project-image{
        width: 100%;
        height: 100%;
    }
    .card__project-info{
        position: absolute;
        top: 0;
        width: 100%;
        height: 0;
        transition: all 1.2s;
        background-color: rgb(31, 41, 55);
        opacity: 0;
    }
    .card__project:hover .card__project-info{
        display: flex;
        flex-direction: column;
        height: 100%;
        transition: all 1.2s;
        opacity: 1;
    }


    @media screen and (max-width:767px) {
        .card__project{
            width: 280px;
            height: 320px;
        }
    }


</style>